@font-face{
  font-family: 'logo';
  src: url('../font/ruler2/Ruler Heavy.ttf') format('truetype')
}

#header{
  display: flex;
  align-items: center;
  width: $pageWidth;
  margin: auto;
  
  >#site-logo{
    font-family: logo!important;
    height: 48px;
    display: flex;
    align-items: center;
    font-size: 20px;
    margin-right: 24px;
    >a{
      >span{
        &:nth-child(1){
          color: $primary;
        }
        &:nth-child(2){
          color: #000
        }
      }
    }
  }

  >#site-menu{
    height: 48px;
    display: flex;
    flex: auto;
    >li{
      display: flex;
      align-items: center;
      font-size: 16px;
      padding: 0px 8px;

      &:hover{
        border-bottom: 3px solid $primary;
        color: $primary;
      }
    }
  }
  
  >#site-search{
    height: 32px;
    background: $bg;
    border: 1px solid $line;
    border-radius: 16px;
    padding: 0px 8px;
    text-align: right; 
    position: relative;

    >input{
      height: 24px;
      border: none;
      background: none;
      padding: 0 36px 0 4px;
    }

    >button{
      position: absolute;
      right: 0;
      top: -1px;
      height: 32px;
      width: 32px;
      background: $primary;
      border: none;
      border-radius: 100%;
      color: #fff;
    }
  }

}

  

